<Window x:Class="Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="NormalTimerBrush" Color="Black"></SolidColorBrush>
        <SolidColorBrush x:Key="AlertTimerBrush" Color="Red"></SolidColorBrush>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition />
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Label x:Name="descText" Grid.ColumnSpan="2" Content="自我介绍：20秒倒计时" FontSize="22"></Label>
        <Viewbox Grid.Row="1" Grid.Column="1">
            <TextBlock x:Name="timerText" Text="04:00.00" FontFamily="Consolas"/>
        </Viewbox>
    </Grid>
</Window>
